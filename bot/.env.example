# Solana RPC (get a free/paid endpoint from Helius, Triton, or QuickNode)
RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
# Optional WebSocket for faster slot updates
WS_URL=wss://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# Wallet keypair path
WALLET_PATH=~/.config/solana/id.json

# Flash loan program (our deployed program ID)
FLASH_LOAN_PROGRAM_ID=2chVPk6DV21qWuyUA2eHAzATdFSHM7ykv1fVX7Gv6nor

# Token to borrow for flash loan (USDC mint)
FLASH_LOAN_TOKEN_MINT=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# Borrow amount in token smallest units (1000 USDC = 1000000000 with 6 decimals)
BORROW_AMOUNT=1000000000

# Token pairs to monitor (comma-separated)
PAIRS=SOL/USDC,BONK/USDC,JUP/USDC

# Minimum profit in basis points after all fees (5 = 0.05%)
MIN_PROFIT_BPS=5

# Maximum slippage tolerance (50 = 0.5%)
MAX_SLIPPAGE_BPS=50

# Price poll interval in milliseconds
POLL_INTERVAL_MS=2000

# Priority fee in microLamports (higher = faster landing)
PRIORITY_FEE=50000

# Compute unit limit for the atomic transaction
COMPUTE_UNIT_LIMIT=600000

# Safety: max consecutive failures before halting
MAX_CONSECUTIVE_FAILURES=10

# Start in dry-run mode (true = simulate only)
DRY_RUN=true
